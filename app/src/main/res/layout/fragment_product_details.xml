<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".UI.fragment.ProductDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/back_button_product_details"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_gravity="center"/>
    </Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rolex Watch"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is a golden rolex Watch"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_product_details"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white"
        android:src="@drawable/watch1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_details_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 500000"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/product_details_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 1000000"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="19dp"/>
    <TextView
        android:id="@+id/product_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a rolex watch with black strip and golden finishing."
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Color"
                android:layout_marginLeft="20dp"
                android:textColor="@color/grey"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/product_details_choose_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="black"
                android:layout_marginLeft="20dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:gravity="end">
            <ImageView
                android:id="@+id/product_details_color_1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/black"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/product_details_color_2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/blue"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
            <ImageView
                android:id="@+id/product_details_color_3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/grey"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/product_details_add_to_cart_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button_outline"
                android:layout_marginRight="12dp"
                android:textColor="@color/black"
                android:text="ADD TO CART"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/product_details_buy_now_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button_solid"
                android:textColor="@color/white"
                android:text="BUY NOW"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>